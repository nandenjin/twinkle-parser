{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "stabilityDays": 7,
  "lockFileMaintenance": { "enabled": true },
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["node"],
      "rangeStrategy": "replace"
    }
  ]
}
